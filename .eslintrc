{
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jquery": true
    },
    "globals": {
      "fetch": true,
      "angular": false,
      "chai": true,
      "describe": true,
      "beforeEach": true,
      "it": true,
      "inject": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": true,
      "ecmaFeatures": { "experimentalObjectRestSpread": true }
    },
    "rules": {
      "brace-style": [2, "1tbs"],
      "comma-spacing": [2, {"before": false, "after": true}],
      "comma-style": [2, "last"],
      "curly": [2, "all"],
      "eqeqeq": 2,
      "indent": [1, 4],
      "no-console": 1,
      "no-trailing-spaces": 1,
      "no-use-before-define": 2,
      "no-unused-vars": 1,
      "quotes": [2, "single", "avoid-escape"],
      "semi": [ 2, "always" ],
      "strict": [ 1, "never" ],
      "vars-on-top": 0,
      "yoda": [2, "never", { "exceptRange": true }],
    },
    "extends": "eslint:recommended"
  }